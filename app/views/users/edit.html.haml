.session_page
  .back_btn
    = link_to "マイページ", user_path(current_user.id)
  %h3 アカウントの編集

  .session_form
    = form_with model: @user do |user|
      .login_form 
        .goal_details
          .label
            = user.label "ニックネーム"
          .form
            = user.text_field :name
          .label
            = user.label "email"
          .form
            = user.text_field :email
          .label
            = user.label "パスワード"
          .form
            = user.text_field :password
          .label
            = user.label "確認用パスワード"
          .form
            = user.text_field :password_confirmation
          .sub
            = user.submit "変更"
  %h3 退会の方はこちら
  .delete_btn
    = link_to "アカウントの削除", user_path(@user.id), data: {confirm: "登録されたデータは全て削除されます。本当に削除しますか？"}, method: :delete